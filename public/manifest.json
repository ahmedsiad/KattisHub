{
  "manifest_version": 3,
  "name": "Kattis Tracker",
  "description": "Automatically upload Kattis problem solutions to GitHub.",
  "version": "1.0",
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "permissions": [
    "tabs",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://github.com/?code*",
        "https://open.kattis.com/submissions/*"
      ],
      "js": [
        "auth.js",
        "kattis.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "content_security_policy": {
    "extension_page": "script-src 'self' https://github.com/login/oauth/authorize; object-src 'self'"
  }
}